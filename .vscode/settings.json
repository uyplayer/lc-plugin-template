{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "labuladong-leetcode.defaultLanguage": "cpp",
    "labuladong-leetcode.filePath": {
        "python": {
            "folder": "leetcode/editor/${endpointType}",
            "filename": "${kebab-case-name}.${ext}"
        },
        "python3": {
            "folder": "leetcode/editor/${endpointType}",
            "filename": "${kebab-case-name}.${ext}"
        },
        "javascript": {
            "folder": "leetcode/editor/${endpointType}",
            "filename": "${kebab-case-name}.${ext}"
        },
        "cpp": {
            "folder": "leetcode/editor/${endpointType}",
            "filename": "${kebab-case-name}.${ext}"
        },
        "golang": {
            "folder": "leetcode/editor/${endpointType}",
            "filename": "${snake_case_name}_test.${ext}"
        },
        "java": {
            "folder": "src/main/java/leetcode/editor/${endpointType}",
            "filename": "${PascalCaseName}.${ext}"
        },
        "default": {
            "folder": "",
            "filename": "${id}.${kebab-case-name}.${ext}"
        }
    },
    "labuladong-leetcode.workspaceFolder": "${workspaceFolder}/cpp-template",
    "cmake.sourceDirectory": "${workspaceFolder}/cpp-template",
    // 文件类型关联
    "files.associations": {
        "*.py": "python",
        "*.cpp": "cpp",
        "*.tpp": "cpp",
        "*.h": "cpp",
        "stdexcept": "cpp",
        "type_traits": "cpp"
    },
    // 编辑器设置
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.parameterHints.enabled": true,
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "on",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.ligatures": true,
    "editor.fontSize": 17,
    // 终端设置
    "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 17,
    // Zoom
    "window.zoomLevel": 1,
}