# 基础风格，常见选项：LLVM, Google, Chromium, Mozilla, WebKit, Microsoft
BasedOnStyle: Google

# ========================
# 缩进 / 空格设置
# ========================
IndentWidth: 4 # 缩进 4 空格（比 Google 默认 2 更适合工程）
TabWidth: 4 # Tab 宽度
UseTab: Never # 禁用 Tab，统一用空格
ContinuationIndentWidth: 4 # 换行续行缩进宽度

# ========================
# 指针 / 引用
# ========================
DerivePointerAlignment: false # 不自动推导指针对齐方式
PointerAlignment: Left # 指针左对齐：int* p，而不是 int *p

# ========================
# 大括号风格
# ========================
BreakBeforeBraces: Attach # 大括号紧跟在行尾，常见风格：Attach, Allman, Linux
AllowShortBlocksOnASingleLine: Empty # 只允许空的 {} 写在一行

# ========================
# 函数格式化
# ========================
AllowShortFunctionsOnASingleLine: Empty # 空函数体可以单行 {}，其余函数换行
AllowShortLambdasOnASingleLine: Empty # 空 lambda 可以单行 {}

# ========================
# 控制语句
# ========================
AllowShortIfStatementsOnASingleLine: Never # if 必须换行，避免一行太乱
AllowShortLoopsOnASingleLine: False # for/while 必须换行

# ========================
# 换行控制
# ========================
ColumnLimit: 100 # 每行最大字符数（默认 80 太窄，100 更适合）
BinPackParameters: true # 函数参数过长时自动折行对齐
BinPackArguments: true # 函数调用参数过长时自动折行对齐

# ========================
# 命名空间
# ========================
NamespaceIndentation: All # 命名空间不额外缩进
CompactNamespaces: true # 多层命名空间不要合并写成一行

# ========================
# 其他常用选项
# ========================
SpaceAfterCStyleCast: true # C 风格强转后加空格 (int) x → (int) x
SpacesInParentheses: false # 括号内不要多余空格
SpacesInSquareBrackets: false # [] 内不加空格
Cpp11BracedListStyle: true # C++11 初始化列表统一格式
BreakConstructorInitializers: BeforeComma # 构造函数初始化列表换行位置
ReflowComments: true # 自动换行注释，保持 ColumnLimit
IncludeBlocks: Regroup # regroup 模式，按系统头/本地头分组
